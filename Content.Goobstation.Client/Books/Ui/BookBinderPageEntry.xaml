<Control xmlns="https://spacestation14.io"
         Margin="5">
    <PanelContainer StyleClasses="PdaBorderRect">
        <BoxContainer Orientation="Vertical">
            <ScrollContainer HScrollEnabled="False" SetHeight="500" HorizontalExpand="True">
                <BoxContainer Orientation="Vertical" VerticalAlignment="Center">
                    <Button Name="EjectButton"
                        SetHeight="30"
                        HorizontalExpand="True"
                        Text="Eject"
                        Margin="4 0 4 16"
                        Access="Public"/>
                    <TextEdit Name="TextEdit"
                        HorizontalExpand="True"
                        SetHeight="250"/>
                </BoxContainer>
            </ScrollContainer>
        </BoxContainer>
    </PanelContainer>
</Control>
